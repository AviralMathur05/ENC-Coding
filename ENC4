#include<stdio.h>
int main()
{
    int mat[3][3],i,j,sum;
    printf("Enter matrix elements:");
    for (i=0;i<3;i++)
    {
        for (j=0;j<3; j++)
        {
            scanf("%d", &mat[i][j]);
        }
    }
    for (i=0;i<3;i++)
    {
        for (j=0;j<3; j++)
        {
            printf("%d  ", mat[i][j]);
        }
        printf("\n");
    }

        printf("Transposed matrix: \n");
        for (i=0;i<3;i++)
    {
        for (j=0;j<3; j++)
        {
            printf("%d  ", mat[j][i]);
        }printf("\n");
    }

for(j=0;j<3;j++)
{
    sum=0;
    for(i=0;i<=3;i++)
    {
        sum=sum+mat[i][j];
    }
    printf("%d\n",sum);
    printf("\n");
}
}
